{
  "info": {
    "name": "4. Profile Management",
    "description": "API endpoints for user and admin profile management",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8080",
      "type": "string"
    },
    {
      "key": "jwt_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "jwt_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "user_id",
      "value": "",
      "type": "string"
    },
    {
      "key": "admin_id",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "User Profile",
      "item": [
        {
          "name": "Get User Profile",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/user/profile",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "user", "profile"]
            },
            "description": "Retrieve the current authenticated user's profile information"
          },
          "response": []
        },
        {
          "name": "Update User Profile",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"newemail@example.com\",\n  \"firstName\": \"John\",\n  \"lastName\": \"Doe\",\n  \"profilePicture\": \"https://example.com/profile.jpg\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/user/profile",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "user", "profile"]
            },
            "description": "Update the current authenticated user's profile information. All fields are optional."
          },
          "response": []
        },
        {
          "name": "Change User Password",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"currentPassword\": \"oldPassword123\",\n  \"newPassword\": \"newPassword456\",\n  \"confirmPassword\": \"newPassword456\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/user/profile/change-password",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "user", "profile", "change-password"]
            },
            "description": "Change the current authenticated user's password"
          },
          "response": []
        },
        {
          "name": "Deactivate User Account",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/user/profile/deactivate",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "user", "profile", "deactivate"]
            },
            "description": "Deactivate the current authenticated user's account"
          },
          "response": []
        },
        {
          "name": "Reactivate User Account",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/user/profile/reactivate",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "user", "profile", "reactivate"]
            },
            "description": "Reactivate the current authenticated user's account"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Admin Profile",
      "item": [
        {
          "name": "Get Current Admin Profile",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/admin/profile",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "admin", "profile"]
            },
            "description": "Retrieve the current authenticated admin's profile information"
          },
          "response": []
        },
        {
          "name": "Get Admin Profile by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/admin/profile/{{admin_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "admin", "profile", "{{admin_id}}"]
            },
            "description": "Retrieve any admin's profile information by their ID (for super admins and higher-level admins)"
          },
          "response": []
        },
        {
          "name": "Update Admin Profile",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@example.com\",\n  \"firstName\": \"Admin\",\n  \"lastName\": \"User\",\n  \"profilePicture\": \"https://example.com/admin-profile.jpg\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/admin/profile",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "admin", "profile"]
            },
            "description": "Update the current authenticated admin's profile information. All fields are optional."
          },
          "response": []
        },
        {
          "name": "Change Admin Password",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"currentPassword\": \"oldAdminPass123\",\n  \"newPassword\": \"newAdminPass456\",\n  \"confirmPassword\": \"newAdminPass456\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/admin/profile/change-password",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "admin", "profile", "change-password"]
            },
            "description": "Change the current authenticated admin's password"
          },
          "response": []
        },
        {
          "name": "Deactivate Admin Account",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/admin/profile/{{admin_id}}/deactivate",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "admin", "profile", "{{admin_id}}", "deactivate"]
            },
            "description": "Deactivate an admin account. Only super admins or higher-level admins can deactivate other admin accounts."
          },
          "response": []
        },
        {
          "name": "Reactivate Admin Account",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/admin/profile/{{admin_id}}/reactivate",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "admin", "profile", "{{admin_id}}", "reactivate"]
            },
            "description": "Reactivate an admin account. Only super admins or higher-level admins can reactivate other admin accounts."
          },
          "response": []
        }
      ]
    }
  ]
}
