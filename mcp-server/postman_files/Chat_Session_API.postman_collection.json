{
  "info": {
    "_postman_id": "chat-session-api-collection",
    "name": "chat sessions",
    "description": "Complete collection for testing Chat Session CRUD endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "1. Create Session",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (pm.response.code === 201) {",
              "    var jsonData = pm.response.json();",
              "    if (jsonData.sessionId) {",
              "        pm.collectionVariables.set(\"session_id\", jsonData.sessionId);",
              "        console.log(\"Session ID saved:\", jsonData.sessionId);",
              "    }",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{jwt_token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"My First Chat Session\",\n  \"model\": \"gpt-3.5-turbo\",\n  \"isPublic\": false\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/v1/sessions",
          "host": ["{{base_url}}"],
          "path": ["api", "v1", "sessions"]
        },
        "description": "Create a new chat session. Session ID is automatically saved."
      },
      "response": []
    },
    {
      "name": "2. Get All Sessions (Paginated)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{jwt_token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/v1/sessions?page=0&size=10",
          "host": ["{{base_url}}"],
          "path": ["api", "v1", "sessions"],
          "query": [
            {
              "key": "page",
              "value": "0"
            },
            {
              "key": "size",
              "value": "10"
            }
          ]
        },
        "description": "Get paginated list of all user's chat sessions."
      },
      "response": []
    },
    {
      "name": "3. Get Active Sessions",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{jwt_token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/v1/sessions/active",
          "host": ["{{base_url}}"],
          "path": ["api", "v1", "sessions", "active"]
        },
        "description": "Get all active chat sessions for the user."
      },
      "response": []
    },
    {
      "name": "4. Get Specific Session",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{jwt_token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/v1/sessions/{{session_id}}",
          "host": ["{{base_url}}"],
          "path": ["api", "v1", "sessions", "{{session_id}}"]
        },
        "description": "Get details of a specific session. Uses session_id from 'Create Session' request."
      },
      "response": []
    },
    {
      "name": "5. Update Session",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{jwt_token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Updated Chat Title\",\n  \"model\": \"gpt-4\",\n  \"isPublic\": true\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/v1/sessions/{{session_id}}",
          "host": ["{{base_url}}"],
          "path": ["api", "v1", "sessions", "{{session_id}}"]
        },
        "description": "Update session details. All fields are optional."
      },
      "response": []
    },
    {
      "name": "6. Pause Session",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{jwt_token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/v1/sessions/{{session_id}}/pause",
          "host": ["{{base_url}}"],
          "path": ["api", "v1", "sessions", "{{session_id}}", "pause"]
        },
        "description": "Pause a chat session. Status changes to PAUSED."
      },
      "response": []
    },
    {
      "name": "7. Activate Session",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{jwt_token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/v1/sessions/{{session_id}}/activate",
          "host": ["{{base_url}}"],
          "path": ["api", "v1", "sessions", "{{session_id}}", "activate"]
        },
        "description": "Activate/resume a paused or archived session. Status changes to ACTIVE."
      },
      "response": []
    },
    {
      "name": "8. Archive Session",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{jwt_token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/v1/sessions/{{session_id}}/archive",
          "host": ["{{base_url}}"],
          "path": ["api", "v1", "sessions", "{{session_id}}", "archive"]
        },
        "description": "Archive a chat session. Status changes to ARCHIVED."
      },
      "response": []
    },
    {
      "name": "9. Delete Session",
      "request": {
        "method": "DELETE",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{jwt_token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/v1/sessions/{{session_id}}",
          "host": ["{{base_url}}"],
          "path": ["api", "v1", "sessions", "{{session_id}}"]
        },
        "description": "Soft delete a session. Status changes to DELETED. Returns 204 No Content."
      },
      "response": []
    }
  ],
  "description": "Chat Session CRUD operations",
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8080",
      "type": "string"
    },
    {
      "key": "jwt_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "session_id",
      "value": "",
      "type": "string"
    }
  ]
}
