					"name": "Login Admin",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"// Extract JWT token from response and set as environment variable",
									"if (pm.response.code === 200) {",
									"    const responseJson = pm.response.json();",
									"    if (responseJson.success && responseJson.accessToken) {",
									"        pm.environment.set('jwt_token', responseJson.accessToken);",
									"        console.log('JWT Token Saved: ', responseJson.accessToken);",
									"    } else if (responseJson.requires2FA) {",
									"        console.log('2FA Required - use the 2FA verify-login endpoint');",
									"        pm.environment.set('2fa_username', responseJson.user.username);",
									"    }",
									"}"
