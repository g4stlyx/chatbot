{
	"info": {
		"_postman_id": "database-backup-api-collection",
		"name": "7. Database Backup API",
		"description": "API endpoints for database backup management (Admin only)",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Get Backup Status",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{jwt_token}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{baseUrl}}/api/v1/admin/database-backup/status",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"v1",
						"admin",
						"database-backup",
						"status"
					]
				},
				"description": "Get current backup status and configuration info. Returns scheduled time and manual trigger availability."
			},
			"response": []
		},
		{
			"name": "Create Backup",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{jwt_token}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{baseUrl}}/api/v1/admin/database-backup/create",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"v1",
						"admin",
						"database-backup",
						"create"
					]
				},
				"description": "Manually trigger a database backup. The backup will be created and emailed in the background. Note: Backup process runs asynchronously to avoid request timeout."
			},
			"response": []
		}
	],
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://localhost:8080",
			"type": "string"
		},
		{
			"key": "jwt_token",
			"value": "",
			"type": "string"
		}
	]
}
