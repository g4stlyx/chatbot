{
	"info": {
		"_postman_id": "projects-api-collection",
		"name": "6. Projects API",
		"description": "API endpoints for managing projects (grouping chat sessions)",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Create Project",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{jwt_token}}",
						"type": "text"
					},
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"name\": \"AI Research\",\n  \"description\": \"Research and experiments with AI models\",\n  \"color\": \"#3B82F6\",\n  \"icon\": \"flask\"\n}"
				},
				"url": {
					"raw": "{{baseUrl}}/api/v1/projects",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"v1",
						"projects"
					]
				},
				"description": "Create a new project to organize chat sessions"
			},
			"response": []
		},
		{
			"name": "Get All Projects",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{jwt_token}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{baseUrl}}/api/v1/projects?page=0&size=20&sortBy=updatedAt&sortDirection=desc&archived=false",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"v1",
						"projects"
					],
					"query": [
						{
							"key": "page",
							"value": "0",
							"description": "Page number (default: 0)"
						},
						{
							"key": "size",
							"value": "20",
							"description": "Page size (default: 20)"
						},
						{
							"key": "sortBy",
							"value": "updatedAt",
							"description": "Sort field (default: updatedAt)"
						},
						{
							"key": "sortDirection",
							"value": "desc",
							"description": "Sort direction: asc or desc (default: desc)"
						},
						{
							"key": "archived",
							"value": "false",
							"description": "Filter by archived status (optional)"
						}
					]
				},
				"description": "Get all projects for the current user with pagination and filtering"
			},
			"response": []
		},
		{
			"name": "Get Project by ID",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{jwt_token}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{baseUrl}}/api/v1/projects/:projectId",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"v1",
						"projects",
						":projectId"
					],
					"variable": [
						{
							"key": "projectId",
							"value": "1",
							"description": "Project ID"
						}
					]
				},
				"description": "Get a specific project by ID"
			},
			"response": []
		},
		{
			"name": "Update Project",
			"request": {
				"method": "PUT",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{jwt_token}}",
						"type": "text"
					},
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"name\": \"AI Research Updated\",\n  \"description\": \"Updated description for AI research\",\n  \"color\": \"#10B981\",\n  \"icon\": \"lightbulb\"\n}"
				},
				"url": {
					"raw": "{{baseUrl}}/api/v1/projects/:projectId",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"v1",
						"projects",
						":projectId"
					],
					"variable": [
						{
							"key": "projectId",
							"value": "1",
							"description": "Project ID"
						}
					]
				},
				"description": "Update project details (all fields optional for partial update)"
			},
			"response": []
		},
		{
			"name": "Archive Project",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{jwt_token}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{baseUrl}}/api/v1/projects/:projectId/archive",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"v1",
						"projects",
						":projectId",
						"archive"
					],
					"variable": [
						{
							"key": "projectId",
							"value": "1",
							"description": "Project ID"
						}
					]
				},
				"description": "Archive a project (hides from default view, doesn't delete)"
			},
			"response": []
		},
		{
			"name": "Unarchive Project",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{jwt_token}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{baseUrl}}/api/v1/projects/:projectId/unarchive",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"v1",
						"projects",
						":projectId",
						"unarchive"
					],
					"variable": [
						{
							"key": "projectId",
							"value": "1",
							"description": "Project ID"
						}
					]
				},
				"description": "Unarchive a project (restore to active status)"
			},
			"response": []
		},
		{
			"name": "Delete Project",
			"request": {
				"method": "DELETE",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{jwt_token}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{baseUrl}}/api/v1/projects/:projectId",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"v1",
						"projects",
						":projectId"
					],
					"variable": [
						{
							"key": "projectId",
							"value": "1",
							"description": "Project ID"
						}
					]
				},
				"description": "Delete a project (sessions are preserved with projectId set to null)"
			},
			"response": []
		},
		{
			"name": "Add Session to Project",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{jwt_token}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{baseUrl}}/api/v1/projects/:projectId/sessions/:sessionId",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"v1",
						"projects",
						":projectId",
						"sessions",
						":sessionId"
					],
					"variable": [
						{
							"key": "projectId",
							"value": "1",
							"description": "Project ID"
						},
						{
							"key": "sessionId",
							"value": "session-uuid-here",
							"description": "Chat Session ID (UUID)"
						}
					]
				},
				"description": "Add a chat session to a project (auto-updates session counts)"
			},
			"response": []
		},
		{
			"name": "Remove Session from Project",
			"request": {
				"method": "DELETE",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{jwt_token}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{baseUrl}}/api/v1/projects/sessions/:sessionId",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"v1",
						"projects",
						"sessions",
						":sessionId"
					],
					"variable": [
						{
							"key": "sessionId",
							"value": "session-uuid-here",
							"description": "Chat Session ID (UUID)"
						}
					]
				},
				"description": "Remove a chat session from its project (sets projectId to null)"
			},
			"response": []
		},
		{
			"name": "Search Projects",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{jwt_token}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{baseUrl}}/api/v1/projects/search?query=research&page=0&size=20",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"v1",
						"projects",
						"search"
					],
					"query": [
						{
							"key": "query",
							"value": "research",
							"description": "Search query (case-insensitive)"
						},
						{
							"key": "page",
							"value": "0",
							"description": "Page number (default: 0)"
						},
						{
							"key": "size",
							"value": "20",
							"description": "Page size (default: 20)"
						}
					]
				},
				"description": "Search projects by name (case-insensitive)"
			},
			"response": []
		}
	],
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://localhost:8081",
			"type": "string"
		},
		{
			"key": "jwt_token",
			"value": "",
			"type": "string"
		}
	]
}
